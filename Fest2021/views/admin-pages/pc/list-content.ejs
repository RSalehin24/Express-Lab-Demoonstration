<div class="right_col" role="main">
    <div class="col-md-12 col-sm-12">
      <div class="x_panel">
        <div class="x_title">
          <h1>Programming Contest <small>Team List</small></h1>
          <ul class="nav navbar-right panel_toolbox">
            <li>
              <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>
          </ul>
          <div class="clearfix"></div>
        </div>
        <div class="x_content">
          <br />
  
          <% let success="Data has been deleted successfully!" %> <% let
          success2="Payment completed successfully!" %> <% let
          success3="Team has been selected successfully!" %> <% let
          success4= "Team has been edited successfully!" %>
          <%if(error.length>0){if((error==success) || (error==success2) ||
          (error==success3) || (error==success4)){%>
          <div class="alert alert-success"><%=error%></div>
          <%}else{%>
          <div class="alert alert-danger"><%=error%></div>
          <%}%> <%}%>
  
          <div class="row">
            <div class="col-sm-12">
              <div class="card-box table-responsive">
                <table
                  id="datatable-responsive"
                  class="table table-striped table-bordered dt-responsive nowrap"
                  cellspacing="0"
                  width="100%"
                >
                  <thead>
                    <tr>
                        <th class="table-bordered" colspan="5">Team Information</th>
                        <th class="table-bordered" colspan="4">Coach Information</th>
                        <th class="table-bordered" colspan="4">Team Leader Information</th>
                        <th class="table-bordered" colspan="4">Team Member 1 Information</th>
                        <th class="table-bordered"  colspan="4">Team Member 2 Information</th>
                        <th class="table-bordered"  colspan="8">Other Information</th>
                    </tr>
                    <tr class="table-primary">
                        <th scope="col">Name</th>
                        <th scope="col">Institution</th>
                        <th scope="col">Code</th>
                        <th scope="col">Category</th>

                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Contact</th>
                        <th scope="col">T-Shirt</th>
    
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Contact</th>
                        <th scope="col">T-Shirt</th>
    
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Contact</th>
                        <th scope="col">T-Shirt</th>
    
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Contact</th>
                        <th scope="col">T-Shirt</th>
                        
                        <th scope="col">Total</th>
                        <th scope="col">Paid</th>
                        <th scope="col">Selected</th>
                        <th scope="col">Payment <br/> Status</th>
                        <th scope="col">Select</th>
                        <th scope="col">Payment<br />Done</th>
                        <th scope="col">Edit</th>
                        <th scope="col">Delete</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if(teams.length>0){
                    teams.forEach(team=>{%>
                    <tr>
                        <td><%= team.teamName %></td>
                        <td><%= team.institution %></td>
                        <td>
                          <b><%= team.code %></b>    
                        </td>
                        <td><%= team.category %></td>
                        

                        <td><%= team.coach.name %></td>
                        <td><%= team.coach.email %></td>
                        <td><%= team.coach.contact %></td>
                        <td><%= team.coach.tshirt %></td>
    
                        <td><%= team.teamLeader.name %></td>
                        <td><%= team.teamLeader.email %></td>
                        <td><%= team.teamLeader.contact %></td>
                        <td><%= team.teamLeader.tshirt %></td>
    
    
                        <td><%= team.teamMember1.name %></td>
                        <td><%= team.teamMember1.email %></td>
                        <td><%= team.teamMember1.contact %></td>
                        <td><%= team.teamMember1.tshirt %></td>
    
                        <td><%= team.teamMember2.name %></td>
                        <td><%= team.teamMember2.email %></td>
                        <td><%= team.teamMember2.contact %></td>
                        <td><%= team.teamMember2.tshirt %></td>
                       
                        <td><%= team.total %></td>
                        <td><%= team.paid %></td> 
                      <td>
                        <% if(team.selected==true){%>
                        <p style="color: green">Yes</p>
                        <%}else{%>
                        <p style="color: red">No</p>
                        <%}%>
                      </td>
                      <td>
                        <% if(team.paid==team.total){%>
                        <p style="color: green">Successful</p>
                        <%}else if(team.paid>team.total){%>
                        <p style="color: orange">Over Paid</p>
                        <%}else{%>
                        <p style="color: red">Incomplete</p>
                        <%}%>
                      </td>
  
                      <td>
                        <% const selectURL="select/"+team._id%>
                        <a href="<%= selectURL %>">
                          <i class="fa fa-check"></i>
                          <span class="fa fa-chevron"></span>
                        </a>
                      </td>
                      <td>
                        <% const paymentDoneURL="paymentDone/"+team._id%>
                        <a href="<%= paymentDoneURL %>">
                          <i class="fa fa-money"></i>
                          <span class="fa fa-chevron"></span>
                        </a>
                      </td>
                      <td>
                        <% const editURL= team._id%>
                        <a href="<%= editURL %>">
                          <i class="fa fa-pencil"></i>
                          <span class="fa fa-chevron"></span>
                        </a>
                      </td>
                      <td>
                        <% const deleteURL="delete/"+team._id%>
                        <a href="<%= deleteURL %>">
                          <i class="fa fa-trash"></i>
                          <span class="fa fa-chevron"></span>
                        </a>
                      </td>
                    </tr>
                    <% }) } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  